doctype html

head
  meta(charset="utf-8")
  meta(http-equiv="x-ua-compatible" content="ie=edge")
  meta(name="viewport" content="width=device-width, initial-scale=1")
  meta(name="author" content="")
  meta(name="description" content="")
  meta(name="keywords" content="")
  title Tiles

  link(rel="stylesheet" type="text/css" href="css/normalize.min.css")
  link(rel="stylesheet" type="text/css" href="css/styles.min.css")

body
  .container
    .modal-overlay
      .modal-content
        div
          img.modal-image(src="#")
          a.modal-close.fg-white Close
    .content
      header
        h1 Tiles
        p
          a(href="mailto:timothyw.harrison@gmail.com")
            em by Tim Harrison

      .tile-container
        - var n = 0;
        while n < 16
          .tile
            .bg-overlay
            .content-overlay
              a(href="#" target="_blank")
                h2.text-center Title
              hr
              img.body-image(src="#")
              p.body-text Body Text
              - n++;
              a.btn Click Here!

  // Scripts
  script(type="text/javascript" src="https://cdn.polyfill.io/v2/polyfill.js?features=default,es6,fetch")
  script(type="text/javascript" src="js/scripts.js")
